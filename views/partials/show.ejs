<div class="container margintop20">
	<div class="row mediacard">
		<div class="col-lg-2 col-sm-3 hidden-xs frameMedia">
			<img class="poster" ng-src="{{show.posterUrl}}" src="/img/Movie.jpg"></img>
		</div>
		<div class="col-xs-12 col-sm-9 col-lg-10 margin-top">
			<button class="btn btn-primary pull-right" translate="FORM_FOLLOW">Follow</button>
			<h2 ng-bind="show.langTitle || show.title">TITLE</h2>
			<h4 class="marginbottom5"><small>
				<span ng-bind="show.yearEnd || show.yearStart">2014</span> <b>&middot;</b> 
				<span ng-bind="show.runtime">90</span> min
			</small></h4>
			<h4 ng-show="show.roles"><small><span translate="BY">By</span> <span ng-repeat="role in show.roles" ng-if="role.roleActivity_id == 2"><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name" data-title="{{role.rolename}}" bs-tooltip></a></small></h4>
			<h4 ng-show="show.roles"><small><span translate="WITH">With</span> <span ng-repeat="role in show.roles|limitTo: 4" ng-if="role.roleActivity_id == 1"><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name" data-title="{{role.rolename}}" bs-tooltip></a></small></h4>
			<p class="plot margintop10">
				<span ng-bind="show.synopsis"></span>
			</p>
		</div>
	</div>

	<div class="col-xs-12 col-sm-10 center-block">
		<hr />
	</div>
</div>

<div class="container">
	<div class="col-xs-12 col-sm-10 col-sm-offset-1 episodePicker">
		<button class="btn btn-primary btn-sm" style="width:80px;" translate="SEASONS">Seasons</button>
		<button class="btn btn-default btn-sm" ng-init="season.nb = show.seasons.indexOf(season)" ng-click="changeSeason(season.nb)" ng-repeat="season in show.seasons" ng-if="season" ng-class="{active: season.nb == currentEpisode.season_nb}">{{season.nb}}</button>
		<br/>
		<button class="btn btn-primary btn-sm" style="width:80px;" translate="EPISODES">Episodes</button>
		<span ng-repeat="season in show.seasons" ng-if="show.seasons.indexOf(season) == currentEpisode.season_nb">
			<button class="btn btn-default btn-sm" ng-if="episode" ng-click="changeEpisode(episode)" ng-repeat="episode in season" ng-class="{active: episode.episode_nb == currentEpisode.episode_nb}">{{episode.episode_nb}}</button>
		</span>
	</div>
</div>
<div id="showAlertContainer"></div>

<div class="container">
	<div class="col-xs-12 col-sm-10 center-block">
		<hr />
	</div>
</div>

<linkform media="episodes" media-id="{{currentEpisode.ID}}" next-episode="nextEpisode" prev-episode="prevEpisode"></linkform>

<div class="container">
	<div class="col-xs-12 col-sm-10 center-block">
		<hr />
	</div>
</div>

<comments></comments>
