<div class="container margintop20">
	<h3 class="page-header" translate="{{list.title}}"></h3>
	<div class="row mediacard margintop20" ng-repeat="media in list.medias">
		<div class="col-lg-2 col-sm-3 hidden-xs frameMedia">
			<a ng-href="/{{list.media}}/{{media.ID}}">
				<img class="poster" ng-src="{{media.posterUrl}}" src="/img/Movie.jpg"></img>
			</a>
		</div>
		<div class="col-xs-12 col-sm-9 col-lg-10 margin-top">
			<button class="btn btn-primary pull-right">Add to list</button>
			<a ng-href="/{{list.media}}/{{media.ID}}"><h2 ng-bind="media.langTitle || media.title">TITLE</h2></a>
			<h4 class="marginbottom5"><small>
				<span ng-bind="media.productionYear">2014</span> <b>&middot;</b> 
				<span ng-bind="media.runtime">90</span> min
			</small></h4>
			<h4 ng-show="media.roles"><small>By <span ng-repeat="role in media.roles" ng-if="role.roleActivity_id == 3"><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name" data-title="{{role.rolename}}" bs-tooltip></a></small></h4>
			<h4 ng-show="media.roles"><small>With <span ng-repeat="role in media.roles|limitTo: 4" ng-if="role.roleActivity_id == 1"><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name" data-title="{{role.rolename}}" bs-tooltip></a></small></h4>
			<p class="plot margintop10">
				<span ng-bind="media.synopsis"></span>
			</p>
		</div>
	</div>
</div>