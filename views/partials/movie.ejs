<div class="container margintop20">
	<div class="row mediacard">
		<div class="col-lg-2 col-sm-3 hidden-xs frameMedia">
			<img class="poster" ng-src="{{movie.posterUrl}}" src="/img/Movie.jpg"></img>
		</div>
		<div class="col-xs-12 col-sm-9 col-lg-10 margin-top">
			<button class="btn btn-primary pull-right" translate="FORM_ADDTOLIST">Add to list</button>
			<h2 ng-bind="movie.langTitle || movie.title">TITLE</h2>
			<h4 class="marginbottom5"><small>
				<span ng-bind="movie.productionYear">2014</span> <b>&middot;</b> 
				<span ng-bind="movie.runtime">90</span> min
			</small></h4>
			<h4 ng-show="movie.roles"><small><span translate="BY">By</span> <span ng-repeat="role in movie.roles" ng-if="role.roleActivity_id == 3"><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name" data-title="{{role.rolename}}" bs-tooltip></a></small></h4>
			<h4 ng-show="movie.roles"><small><span translate="WITH">With</span> <span ng-repeat="role in movie.roles|limitTo: 4" ng-if="role.roleActivity_id == 1"><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name" data-title="{{role.rolename}}" bs-tooltip></a></small></h4>
			<p class="plot margintop10">
				<span ng-bind="movie.synopsis"></span>
			</p>
		</div>
	</div>
</div>

<div class="container">
	<div class="col-xs-12 col-sm-10 center-block">
		<hr />
	</div>
</div>

<div id="movieAlertContainer"></div>

<linkform media="movies" media-id="{{movie.ID}}"></linkform>

<div class="container">
	<div class="col-xs-12 col-sm-10 center-block">
		<hr />
	</div>
</div>

<comments></comments>
<pre>{{movie}}</pre>
