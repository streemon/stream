<div class="container margintop20">
	<div class="row mediacard">
		<div class="col-lg-2 col-sm-3 hidden-xs frameMedia">
			<img class="poster" ng-src="{{movie.poster_path}}" ng-if="movie.poster_path"></img>
		</div>
		<div class="col-xs-12 col-sm-9 col-lg-10 margin-top">
			<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#listModal" translate="FORM_ADDTOLIST">Add to List</button>
			<h1 ng-bind="movie.title || movie.original_title">TITLE</h1>
			<h4 class="marginbottom5"><small>
				<span ng-bind="movie.release_date | date: 'yyyy'">2014</span> <b>&middot;</b> 
				<span ng-bind="movie.runtime">90</span> min
			</small></h4>
			<h4 ng-show="movie.credits.crew"><small><span translate="BY">By</span> <span ng-repeat="role in movie.credits.crew |filter: {job:'Director'}:true"><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name"></a></small></h4>
			<h4 ng-show="movie.credits.cast"><small><span translate="WITH">With</span> <span ng-repeat="role in movie.credits.cast|limitTo: 4" ><span ng-if="$index != 0"> &middot; </span><a href="#" ng-bind="role.name" data-title="{{role.character}}" bs-tooltip></a></small></h4>
			<p class="plot margintop10">
				<span ng-bind="movie.overview"></span>
			</p>
		</div>
	</div>
</div>

<div class="container">
	<div class="col-xs-12 col-sm-10 center-block">
		<hr />
	</div>
</div>

<div id="movieAlertContainer"></div>

<linkform media="movies" media-id="{{movie.id}}"></linkform>
<listform media="movies" media-id="{{movie.id}}"></listform>

<div class="container">
	<div class="col-xs-12 col-sm-10 center-block">
		<hr />
	</div>
</div>

