<div class="container" infinite-scroll="addMoreLists()" infinite-scroll-distance="0">
	<div class="row marginbottom20" ng-repeat="list in lists track by $index" ng-if="list.items">
		<a ng-href="/lists/{{list._id || list.id || list.url}}/{{list.media}}" class="page-header-link">
			<h3 class="page-header" translate="{{list.name}}" translate-values="{media: list.media}">
				{{list.title || list.name}}
			</h3>
		</a>
		<a ng-href="/{{item.media || list.media || 'movies'}}/{{item.id}}" ng-repeat="item in list.items | limitTo: 6" class="col-xs-4 col-sm-4 col-md-2 frame"><img class="poster" src="/img/Movie.jpg" ng-src="{{'http://image.tmdb.org/t/p/w150' + item.poster_path}}"></img></a>
	</div>
</div>