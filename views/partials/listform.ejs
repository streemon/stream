<!-- listform modal -->
<div class="modal" id="listModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title" translate="FORM_ADDTOLIST">Add to List</h4>
		</div>
		<div class="modal-body">
			<div id="listAlertContainer"></div>
			<div class="form-group">
				<div ng-repeat="list in userLists" class="marginbottom10" ng-class="{'has-success': inList[$index], 'has-info': mouseOver}">
					<div  class="form-control form-list" ng-mouseover="mouseOver = true" ng-mouseleave="mouseOver = false" ng-click="toggleItemList($index)">
						{{list.title}} <i class="fa fa-check-circle fa-lg pull-right" ng-show="inList[$index] || mouseOver"></i>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<div class="form-group">
				<form ng-submit="addNewList(newList)">
					<input size="40" class="form-control" type="text" placeholder="Create new list" name="newList" ng-model="newList" />
				</form>
			</div>
		</div>
	</div>
  </div>
</div>